
@{
    if (string.IsNullOrEmpty(ViewBag.Title))
    {
        ViewBag.Title = "Unspecified Error";
    }
    if (string.IsNullOrEmpty(ViewBag.Description))
    {
        ViewBag.Description = "You are not authorize to access QMR";
    }
}

<div class="col-lg-10 col-lg-offset-1">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>
                <span class="glyphicon glyphicon-alert" aria-hidden="true"></span> @ViewBag.Title
            </h2>
        </div>
        <div class="panel-body">
            <p>If you continue to have problems, please contact us for assistance.</p>
        </div>
    </div>
</div>


